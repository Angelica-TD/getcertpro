<% layout('layouts/boilerplate')%>
<!-- START COLUMNS CONTAINER FOR CONTENT -->
<div class="container">
    <div class="dropdown">
        <button class="dropbtn">Filter by Category</button>
        <div class="dropdown-content">
          <input type="text" placeholder="Search.." id="filter-input">
            <a href="/allcertifications">All</a>
            <%for(let item in noDupes){%>
            <a href="/allcertifications?filterby=<%= noDupes[item] %>"><%= noDupes[item] %></a>
            <%}%>
        </div>
    </div>
    <!-- START MIDDLE COLUMN CONTENT -->
    <div class="d-flex my-wrap flex-row mb-3 justify-content-start mt-5 custom">
        <%- include('partials/ads') %>
        <%for(let item in filteredContent){%>
            <div class="col-lg-4 p-4">
                <a href="<%= filteredContent[item].url %>" target="_blank" class="link clickCount">
                    <%if(filteredContent[item].logo){%>
                        <img src="<%= filteredContent[item].logo %>" class="img-fluid custom-img mx-auto d-block" alt="<%= filteredContent[item].alt %>">
                    <%}else{%>
                        <div class="custom-img">
                            <%= filteredContent[item].alt %>
                        </div>
                    <%}%>
                    <h3><%=filteredContent[item].name%></h3>
                    <p><%=filteredContent[item].description%></p>
                </a>
                            
            </div>
        <%}%>
    </div>


</div>
		<!-- END MIDDLE COLUMN CONTENT -->
        <script src="/js/filterHover.js"></script>
        